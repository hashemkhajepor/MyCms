@model DataLayer.ChangePasswordViewModel

@{
    ViewBag.Title = "تغییر کلمه عبور";
    Layout = "~/Views/Shared/_DefualtCmsLayout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="container">
         @if(ViewBag.Success == true)
         {
             <div class="alert alert-success">
                 کلمه عبور شما با موفقیت تغییر کرد
             </div>
         }
        <h4 id="h4r">تغییر کلمه عبور</h4>
        <hr id="hrr"/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "control-label col-offset-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-offset-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RePassword, htmlAttributes: new { @class = "control-label col-offset-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-11">
                <input type="submit" value="تغییر کلمه عبور" class="btn btn-primary" />
            </div>
        </div>
    </div>
        </div>
}

