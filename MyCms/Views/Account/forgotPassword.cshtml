@model DataLayer.ForgotPasswordViewModel

@{
    ViewBag.Title = "بازیابی کلمه عبور";
    Layout = "~/Views/Shared/_DefualtCmsLayout.cshtml";
}

<h2>forgotPassword</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="container">
        <h4 id="h4r">بازیابی کلمه عبور</h4>
        <hr id="hrr"/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-offset-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ارسال ایمیل بازیابی" class="btn btn-primary" />
            </div>
        </div>
    </div>
        </div>
}

